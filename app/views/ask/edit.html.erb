<h1>게시글을 수정하세요</h1>
<form action ="/ask/update/<%= @ask.id %>" method="post">
  <div class="form-group">
    <label>작성자</label>
    <input name="username" type="text" value="<%= @ask.username %>" class="form-control" >
  </div>
  <div class="form-group">
    <label>제목</label>
    <input name="title" type="text" value="<%= @ask.title %>" class="form-control" placeholder="제목을 입력해주세요">
  </div>

  <div class="form-group">
    <label>내용</label>
    <textarea name="content" class="form-control" rows="3"><%= @ask.content %></textarea>
  </div>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <button type="submit" class="btn btn-info">수정</button>
</form>
